<Window x:Class="WpfApp8.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
            <RowDefinition Height="50" MinHeight="0"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="172,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="268" Height="18" Grid.Row="0"/>
        <TextBox HorizontalAlignment="Left" Margin="172,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="64" Grid.Row="1" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Text="Nombre completo" Height="16" Grid.Row="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Text="Nombre completo" Grid.Row="1" Height="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Grid.Row="2" Height="32"><Run Language="es-es" Text="Sexo"/><LineBreak/><Run Language="es-es"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="29,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Grid.Row="3" Height="16"><Run Language="es-es" Text="Curso"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="29,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="138" Grid.Row="4" Height="16"><Run Language="es-es" Text="Horario"/></TextBlock>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="172,0,0,0" VerticalAlignment="Top" Grid.Row="2" Height="15" Width="85"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="277,0,0,0" VerticalAlignment="Top" Grid.Row="2" Height="15" Width="85"/>
        <ComboBox HorizontalAlignment="Left" Margin="167,0,0,0" VerticalAlignment="Top" Width="273" Grid.Row="3" Height="22">
            <ComboBoxItem Content="DAM"/>
            <ComboBoxItem Content="DAW"/>
            <ComboBoxItem Content="ASIR"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="167,0,0,0" VerticalAlignment="Center" Width="273" Grid.Row="4" Height="22">
            <ComboBoxItem Content="Mañanas"/>
            <ComboBoxItem Content="Tardes"/>
            <RadioButton Content="Nocturno"/>
        </ComboBox>
        <CheckBox Content="T.I" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Grid.Row="5" Height="15" Width="32"/>
        <CheckBox Content="Otro Documento:" HorizontalAlignment="Left" Margin="98,0,0,0" VerticalAlignment="Top" Grid.Row="5" Height="15" Width="112"/>
        <TextBox HorizontalAlignment="Left" Margin="225,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="215" Grid.Row="5" Height="18"/>
        <Button Content="Registrar" HorizontalAlignment="Left" Margin="98,0,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" Grid.Row="6" Height="20"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="285,0,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" Grid.Row="6" Height="20"/>
    </Grid>

</Window>

        <Button x:Name="btFacil" Content="Facil" HorizontalAlignment="Left" Margin="606,62,0,0" VerticalAlignment="Top" Height="36" Width="123" Click="Button_Click_1"/>
        <Button x:Name="btDificil" Content="Dificil" HorizontalAlignment="Left" Margin="606,110,0,0" VerticalAlignment="Top" Height="36" Width="123" Click="Button_Click"/>
        <Image x:Name="cruz3" Margin="596,301,106,33" Source="/Emblema_Cruz_Roja.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="44.814"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="tick_1" Margin="431,312,299,40" Source="/istockphoto-1204658131-612x612.jpg" Stretch="Fill"/>
        <Image x:Name="tick_2" Margin="519,312,211,40" Source="/istockphoto-1204658131-612x612.jpg" Stretch="Fill"/>
        <Image x:Name="tick_3" Margin="606,312,124,40" Source="/istockphoto-1204658131-612x612.jpg" Stretch="Fill"/>
        <Image x:Name="cruz2" Margin="504,303,198,31" Source="/Emblema_Cruz_Roja.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="44.814"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="cruz1" Margin="408,304,294,30" Source="/Emblema_Cruz_Roja.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="44.814"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image HorizontalAlignment="Left" Height="100" Margin="126,312,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>

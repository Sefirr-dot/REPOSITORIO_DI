<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txtCantidad" HorizontalAlignment="Left" Margin="113,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-es" Text="Cantidad"/></TextBlock>
        <TextBox x:Name="tbCantidad" HorizontalAlignment="Left" Margin="194,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="txtConversion" HorizontalAlignment="Left" Margin="113,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Conversion"/>
        <ComboBox x:Name="cbox1" ItemsSource="{Binding lista}" HorizontalAlignment="Left" Margin="359,107,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbox1_SelectionChanged"/>
        <ComboBox x:Name="cbox2" ItemsSource="{Binding lista}" HorizontalAlignment="Left" Margin="359,156,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbox2_SelectionChanged"/>
        <Label x:Name="labelConversion" Content="" HorizontalAlignment="Left" Margin="194,156,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>

<Window x:Class="Personajes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personajes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personajes">
                <StackPanel Orientation="Horizontal">
                    <ListBox Name="listaPersonajes" ItemsSource="{Binding personajeList}" Width="300" SelectionChanged="listaPersonajes_SelectionChanged"/>
                    <StackPanel Orientation="Vertical" Width="496" >
                        <TextBlock TextWrapping="Wrap" Text="Nombre:" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Name="txtNombre" Text="" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Text="Genero:" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Name="txtGenero" Text="" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Text="Clase:" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Name="txtClase" Text="" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Text="Fuerza:" Width="120" HorizontalAlignment="Left" Margin="10"/>

                        <TextBlock TextWrapping="Wrap" Name="txtFuerza" Text="" Width="120" HorizontalAlignment="Left" Margin="10"/>

                        <TextBlock TextWrapping="Wrap" Text="Inteligencia:" Width="120" HorizontalAlignment="Left" Margin="10"/>
                        <TextBlock TextWrapping="Wrap" Name="txtInteligencia" Text="" Width="120" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>
                </StackPanel>

            </TabItem>
            <TabItem Header="Creacion de Personajes">
                <StackPanel Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap" Text="Nombre:" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <TextBox TextWrapping="Wrap" Name="txtNombre1" Text="" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <TextBlock TextWrapping="Wrap" Text="Genero:" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <ComboBox ItemsSource="{Binding genero}" Name="txBoxGenero1" Text="" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <TextBlock TextWrapping="Wrap" Text="Clase:" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <ComboBox ItemsSource="{Binding clases}" Name="txBoxClase1" Text="" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <TextBlock TextWrapping="Wrap" Text="Fuerza:" Width="120" HorizontalAlignment="Center" Margin="10"/>

                    <TextBox TextWrapping="Wrap" Name="txtFuerza1" Text="" Width="120" HorizontalAlignment="Center" Margin="10"/>

                    <TextBlock TextWrapping="Wrap" Text="Inteligencia:" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <TextBox TextWrapping="Wrap" Name="txtInteligencia1" Text="" Width="120" HorizontalAlignment="Center" Margin="10"/>
                    <Button Name="btAgregar" Content="Añadir Personje" Click="btAgregar_Click"/>

                </StackPanel>
                
            </TabItem>
        </TabControl>

    </Grid>
</Window>
